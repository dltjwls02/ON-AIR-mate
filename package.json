    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.1.0",
    "express": "^4.21.2",
    "ioredis": "^5.6.1",
    "multer": "^2.0.2",
